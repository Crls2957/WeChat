<view class="mod-a">
        <!-- 姓名 -->
        <view class="mod t-name">
            <text class="key">姓名</text>
            <input class="input" name="name" bindinput='setName' placeholder='请输入姓名'></input>
        </view>         
    </view>
<view class="mod-a">
        <!-- 学号 -->
        <view class="mod t-name">
            <text class="key">学号</text>
            <input class="input" name="num" bindinput='setNum' placeholder='请输入学号'></input>
        </view> 
      </view> 
      <!-- 院系 -->
      <view class="mod-a">
        <view class="mod t-name">
            <text class="key">院系</text>
            <input class="input" name="depart" bindinput='setDepart' placeholder='请输入院系'></input>
        </view>  
        </view> 
        <view class="mod-a">
        <!-- 专业 -->
        <view class="mod t-name">
            <text class="key">专业</text>
            <input class="input" name="major" bindinput='setMajor' placeholder='请输入专业'></input>
        </view>
        </view> 
        <view class="mod-a">
      </view>       
        <view class="create">
        <button class="createbtn" bindtap='updateInfo'>重置</button>
    </view>
